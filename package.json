{
  "name": "chrome-extension-boilerplate-react-vite-typescript-tailwind",
  "version": "0.0.1",
  "description": "chrome extension boilerplate",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codegino/chrome-extension-react-vite-ts-tw.git"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "test": "vitest"
  },
  "type": "module",
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "webextension-polyfill": "0.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "11.1.5",
    "@testing-library/react": "14.1.2",
    "@types/chrome": "0.0.254",
    "@types/node": "20.8.10",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "@types/ws": "8.5.10",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.14.0",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.16",
    "chokidar": "3.5.3",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.31.10",
    "fs-extra": "11.2.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.3.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.32",
    "prettier": "3.1.1",
    "rollup": "4.3.0",
    "tailwindcss": "3.3.6",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.1",
    "typescript": "5.3.3",
    "vite": "5.0.10",
    "vitest": "0.34.6",
    "ws": "8.15.1"
  }
}
